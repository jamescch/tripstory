<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- We cannot change original toolbar style with the theme xxx.ActionBar -->
    <!-- So here we use NoActionBar and inflate our own style toolbar style -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="android:actionBarWidgetTheme">@style/AppTheme.ToolbarStyle</item>-->
        <item name="android:windowContentOverlay">@null</item>
        <!--<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/text_secondary</item>
    </style>


